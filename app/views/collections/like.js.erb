var favoriteActivated = "collection-favorite-activated"

<% if current_user.liked? @collection %>
  $('.collection-favorite').addClass(favoriteActivated);
  $('.collection-favorite > a > i').removeClass('fa-star-o').addClass('fa-star');
<% else %>
  $('.collection-favorite').removeClass(favoriteActivated);
  $('.collection-favorite > a > i').addClass('fa-star-o').removeClass('fa-star');
<% end %>
